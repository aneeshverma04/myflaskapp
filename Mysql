show databases;
create database myflaskapp;
use myflaskapp;
create table users(id INT(11) AUTO_INCREMENT PRIMARY KEY, name VARCHAR(100), username VARCHAR(30),email VARCHAR(100), password VARCHAR(100), register_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP);
show tables;

select * from users;

delete from orders where id_users = 1 and id_product = 2
